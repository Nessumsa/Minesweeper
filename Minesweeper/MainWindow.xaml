<Window x:Class="Minesweeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Minesweeper" Height="600" Width="400">
    <StackPanel>
        <!-- Game Controls -->
        <TextBlock Name="StatusText" Text="Welcome to Minesweeper!" FontSize="16" Margin="10" />
        <Button Name="RestartButton" Content="Restart Game" Click="RestartButton_Click" Margin="10" />

        <!-- Game Grid -->
        <Grid Name="GameGrid"  />
    </StackPanel>
</Window>
